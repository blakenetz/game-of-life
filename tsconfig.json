{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@types": ["types/index.d.ts"],
      "@src/*": ["src/*"],
      "@utils/*": ["src/utils/*.ts"]
    },
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*", "types/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
