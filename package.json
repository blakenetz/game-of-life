{
  "name": "game-of-life",
  "version": "1.0.0",
  "description": "Monorepo based on Conway's Game of Life",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --parallel build",
    "build:server": "pnpm --filter server build",
    "build:web": "pnpm --filter web build",
    "start": "pnpm --filter server start",
    "lint": "pnpm run -r --aggregate-output lint",
    "test": "pnpm run --parallel test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/blakenetz/game-of-life.git"
  },
  "author": "blake netzeband <blake.netzeband@gmail.com> (https://blakenetzeband.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/blakenetz/game-of-life/issues"
  },
  "homepage": "https://github.com/blakenetz/game-of-life#readme",
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
